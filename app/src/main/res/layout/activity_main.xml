<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_forpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORMULIR PENDAFTARAN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/et_nama_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:inputType="text"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/tv_forpen"/>

    <EditText
        android:id="@+id/et_nopen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Pendaftaran"
        android:inputType="text"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/et_nama_l"/>

    <Spinner
        android:id="@+id/sp_jalur_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nopen"
        android:entries="@array/jalurs"
        />

    <CheckBox
        android:id="@+id/cb_konfir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nopen"
        android:layout_marginTop="30dp"
        android:text="Konfirmasi Daftar" />

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_konfir"
        android:text="Daftar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>